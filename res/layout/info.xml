<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ScrollView
	    android:id="@+id/InfoscrollView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#000000" >

		<LinearLayout android:layout_height="fill_parent"
			android:id="@+id/InfolinearLayout" android:orientation="vertical"
			android:layout_width="fill_parent">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent" android:id="@+id/AppInfolinearLayout"
				android:layout_marginTop="20dp" android:layout_marginBottom="10dp"
				android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
				android:background="#FF111111" android:gravity="center_horizontal"
				android:layout_height="wrap_content">
				<TextView android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:paddingBottom="2dp"
					android:paddingLeft="5dp" android:paddingTop="2dp"
					android:textColor="#BEBDBE" android:id="@+id/AppInfoTitletextView"
					android:background="#181818" android:textStyle="bold|italic"></TextView>
				<LinearLayout android:layout_height="wrap_content"
					android:orientation="horizontal" android:layout_width="fill_parent"
					android:id="@+id/AppInfoIconlinearLayout">
					<ImageView android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:layout_margin="10dp"
						android:id="@+id/AppIconimageView"></ImageView>
					<LinearLayout android:layout_height="fill_parent"
						android:orientation="vertical" android:layout_width="fill_parent"
						android:gravity="center" android:id="@+id/AppInfoVerlinearLayout">
						<TextView android:layout_width="fill_parent" android:id="@+id/AppNametextView"
							android:layout_height="wrap_content" android:textSize="18dp"
							android:text="App Name"></TextView>
						<TextView android:layout_width="fill_parent" android:id="@+id/AppVertextView"
							android:layout_height="wrap_content" android:textSize="13dp"
							android:text="App Ver"></TextView>
					</LinearLayout>
				</LinearLayout>
				<TextView android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:id="@+id/AppInfotextView"
					android:layout_margin="10dp" android:text="App Desc"></TextView>
								<TextView android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:id="@+id/AppInfotextView2"
					android:layout_margin="10dp" android:text="App Desc2"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:id="@+id/DevelInfolinearLayout" android:layout_margin="10dp"
				android:background="#FF111111" android:gravity="center_horizontal"
				android:orientation="vertical" android:layout_height="wrap_content">
				<TextView android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:paddingBottom="2dp"
					android:paddingLeft="5dp" android:paddingTop="2dp"
					android:textColor="#BEBDBE" android:id="@+id/DevelInfoTitletextView"
					android:background="#181818" android:textStyle="bold|italic"></TextView>
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:id="@+id/DeveloperlinearLayout"
					android:gravity="center">
					<ImageView android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:id="@+id/wrimageView"
						android:layout_margin="10dp"></ImageView>
					<LinearLayout android:layout_width="fill_parent"
						android:id="@+id/DevelInfo1linearLayout" android:gravity="center"
						android:orientation="vertical" android:layout_height="wrap_content"
						android:layout_marginRight="10dp">
						<TextView android:layout_height="wrap_content"
							android:layout_width="fill_parent" android:id="@+id/DevelNametextView"
							android:gravity="center" android:text="My Name"
							android:layout_marginBottom="10dp" android:layout_marginTop="10dp"></TextView>
						<TextView android:layout_height="wrap_content"
							android:layout_width="fill_parent" android:id="@+id/DevelMailtextView"
							android:gravity="center" android:text="My Mail"
							android:layout_marginBottom="10dp" android:layout_marginTop="10dp"
							android:clickable="true"></TextView>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
